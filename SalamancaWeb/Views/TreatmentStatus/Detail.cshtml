@using SalamancaWeb.Models;
@model TreatmentStatus
@{
    ViewBag.Title = "Detalle del Estado Tratamiento";
    Layout = null;
}

<div class="card">
    <div class="card-body">
        <dl class="dl-horizontal">
            <div class="row">
                <div class="col-12">
                    <dt>ID</dt>
                    <dd>@Model.idTreatmentStatus</dd>
                </div>
                <div class="col-12">
                    <dt>Nombre</dt>
                    <dd>@Model.name</dd>
                </div>
                <div class="col-12">
                    <dt>Prioridad</dt>
                    <dd>@Model.priority</dd>
                </div>
                <div class="col-12">
                    <dt>Color</dt>
                    <dd><span class="badge" style="background-color: @Model.color; color:#ffffff;">@Model.color</span></dd>
                </div>
            </div>
        </dl>
    </div>
</div>