@using SalamancaWeb.Models;
@model Treatment
@{
    Layout = null;
}

<div class="card">
    @using(Html.BeginForm("Delete", "Treatment", FormMethod.Post, new { @id = "formulario" }))
    {
        @Html.HiddenFor(m => m.idTreatment)
        <div class="card-body">
            <p>¿Seguro que deseas eliminar el Tratamiento relacionado a: <span class="font-weight-bold">@Model.inquery.person.names @Model.inquery.person.fatherLastname @Model.inquery.person.motherLastname </span>?</p>
            <p class="font-italic">*Se eliminaran todos los datos asociados.</p>
        </div>
        <div class="card-footer row">
            <div class="col-md-6">
                <button id="btnDelete" data-message="Eliminando Tratamiento!" type="submit" class="btn btn-primary btn-block"><i class="fas fa-trash"></i>  Eliminar</button>
            </div>
            <div class="col-md-6">
                <button data-dismiss="modal" class="btn btn-danger btn-block">Cancelar</button>
            </div>
        </div>
    }
</div>

<script src="~/Assets/model/actions/delete.js"></script>